{
  "type": "object",
  "description": "Document requirements and upload settings",
  "title": "Documents Configuration",
  "properties": {
    "required": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Document name"
          },
          "label": {
            "type": "string",
            "description": "Display label"
          },
          "type": {
            "type": "string",
            "enum": ["file", "image", "pdf"],
            "description": "Document type"
          },
          "required": {
            "type": "boolean",
            "description": "Whether document is required"
          }
        }
      }
    }
  },
  "guidedQuestions": [
    {
      "id": "documentCount",
      "question": "How many documents do you need?",
      "type": "number",
      "placeholder": "Enter number of documents"
    },
    {
      "id": "documentNames",
      "question": "What are the names of your documents?",
      "type": "textArray",
      "placeholder": "Enter document names separated by commas (e.g., Aadhar, Voter ID)"
    },
    {
      "id": "documentTypes",
      "question": "What types of documents are these?",
      "type": "multiSelect",
      "suggestions": ["pdf", "image", "doc", "docx"],
      "placeholder": "Select document types"
    },
    {
      "id": "mandatoryDocuments",
      "question": "Which documents are mandatory?",
      "type": "textArray",
      "placeholder": "Enter mandatory document names"
    }
  ],
  "generationLogic": {
    "type": "object",
    "description": "Generate document configuration object from guided question answers",
    "logic": {
      "documentCount": "number of documents to generate",
      "documentNames": "comma-separated document names",
      "documentTypes": "array of document types",
      "mandatoryDocuments": "comma-separated mandatory document names",
      "output": "Object with required array containing document objects"
    }
  },
  "documentation": {
    "description": "Defines required documents, file types, and upload configurations for the service.",
    "usage": "Configure required documents for the service application.",
    "examples": [
      {
        "required": [
          {
            "name": "identityProof",
            "label": "Identity Proof",
            "type": "file",
            "required": true
          },
          {
            "name": "addressProof",
            "label": "Address Proof",
            "type": "file",
            "required": true
          }
        ]
      }
    ]
  }
} 